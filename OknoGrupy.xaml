<Window x:Class="NET_ININ4_PR1._2___z3.OknoGrupy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NET_ININ4_PR1._2___z3"
        mc:Ignorable="d"
        
        Title="OknoGrupy"
        Height="550"
        Width="400"
        FontSize="24"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <TextBlock
            Text="{Binding XPath=szczegóły/nazwa}"
            />
        <ListBox
            Grid.Row="1"
            Name="ListaProduktów"
            ItemsSource="{Binding XPath=produkt}"
            >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Text="{Binding XPath=nazwa}"
                        />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button
            Grid.Row="2" Click="WidokProduktu"
            >
            Szczegóły
        </Button>
    </Grid>
</Window>
